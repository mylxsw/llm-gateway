# Copy to .env, then run ./start.sh
#
# Default (docker-compose): use PostgreSQL
DEBUG=false
DATABASE_TYPE=postgresql
DATABASE_URL=postgresql+asyncpg://llm_gateway:llm_gateway_password@postgres:5432/llm_gateway

POSTGRES_DB=llm_gateway
POSTGRES_USER=llm_gateway
POSTGRES_PASSWORD=llm_gateway_password

# Optional: enable admin login
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD=change-me

# Optional: host port for Docker Compose
# LLM_GATEWAY_PORT=8000

# If you want to use SQLite instead:
# DATABASE_TYPE=sqlite
# DATABASE_URL=sqlite+aiosqlite:////data/llm_gateway.db
